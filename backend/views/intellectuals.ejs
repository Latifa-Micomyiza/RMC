<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All intellectuals</title>
    <link rel="stylesheet" href="/styles.css"> <!-- Link to your CSS file -->
</head>
<body>
    <h2>Registered intellectuals</h2>
    <table>
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Country</th>
                <th>Residence</th>
                <th>Current Career</th>
                <th>Position</th>
            </tr>
        </thead>
        <tbody>
            <% intellectuals.forEach(intellectual => { %>
                <tr>
                    <td><%= intellectual.FirstName %></td>
                    <td><%= intellectual.LastName %></td>
                    <td><%= intellectual.Email %></td>
                    <td><%= intellectual.PhoneNumber %></td>
                    <td><%= intellectual.Country %></td>
                    <td><%= intellectual.Residence %></td>
                    <td><%= intellectual.Organization %></td>
                    <td><%= intellectual.Position %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
